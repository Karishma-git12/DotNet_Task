@model Developer_Task.ViewModel.StudentVM

<h1>Add Student</h1>
<form method="post" enctype="multipart/form-data" id="studentForm">
    <div class="row">
        <div class="col-12 border-bottom"></div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8">
            <div class="form-group row p-2 m-2">
                <div class="col-4">
                    <label asp-for="Student.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Student.Name" class="form-control" />
                    <span asp-validation-for="Student.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row p-2 m-2">
                <div class="col-4">
                    <label asp-for="Student.Age"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Student.Age" class="form-control" />
                    <span asp-validation-for="Student.Age" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row p-2 m-2">
                <div class="col-4">
                    <label asp-for="Student.RollNumber"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Student.RollNumber" class="form-control" />
                    <span asp-validation-for="Student.RollNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row p-2 m-2">
                <div class="col-4">
                    <label asp-for="Student.ImageUrl"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Student.ImageUrl" type="file" id="UploadBox" name="files" multiple class="form-control" />
                </div>
            </div>
            <div class="form-group row p-2 m-2">
                <div class="col-4">
                    <label asp-for="StudentClassList"></label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => Model.Student.StudentClassId, Model.StudentClassList, "Select Class", new { @class = "form-control" })
                    <span asp-validation-for="Student.StudentClassId" class="text-danger"></span>
                </div>
            </div>
            <br />
            
            <div class="form-group">
                ﻿<div class="row">
                    <div class="col-8 offset-4">
                        <div class="d-flex" style="gap:15px; padding-left:5px;">
                            <button type="button"
                                    class="btn btn-info form-control"
                                    onclick="AlertMessage('@Url.Action("AddStudent", "Student")','studentForm','@Url.Action("Index", "Student")')">
                                Create
                            </button>
                            <a asp-action="Index" class="btn btn-success form-control">Back To List</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>


    </div>
</form>


@section scripts
{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/AlertMessage.js"></script>

}
