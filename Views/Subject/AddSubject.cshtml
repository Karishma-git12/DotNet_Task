@model Developer_Task.ViewModel.SubjectVM

<h1>Add Subject</h1>
<form method="post" id="subjectForm">
    <div class="row">
        <div class="col-12 border-bottom"></div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8">
            <div class="form-group row p-2 m-2">
                <div class="col-4">
                    <label asp-for="Subject.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Subject.Name" class="form-control" />
                    <span asp-validation-for="Subject.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row p-2 m-2">
                <div class="col-4">
                    <label asp-for="StudentClassList"></label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => Model.Subject.StudentClassId, Model.StudentClassList, "Select Class", new { @class = "form-control" })
                    <span asp-validation-for="Subject.StudentClassId" class="text-danger"></span>
                </div>
            </div>
           
            <div class="form-group row p-2 m-2">
                <div class="col-4">
                    <label asp-for="LanguageList"></label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => Model.Subject.LanguageId, Model.LanguageList, "Select Language", new { @class = "form-control" })
                    <span asp-validation-for="Subject.LanguageId" class="text-danger"></span>
                </div>
            </div>
            <br />

            <div class="form-group">
                ﻿<div class="row">
                    <div class="col-8 offset-4">
                        <div class="d-flex" style="gap:15px; padding-left:5px;">
                            <button type="button"
                                    class="btn btn-info form-control"
                                    onclick="AlertMessage('@Url.Action("AddSubject", "Subject")','subjectForm','@Url.Action("Index", "Subject")')">
                                Create
                            </button>
                            <a asp-action="Index" class="btn btn-success form-control">Back To List</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


@section scripts
{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/AlertMessage.js"></script>

}
