@model IEnumerable<Developer_Task.Models.Subject>
@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center text-primary">Subject List</h1>

<div class="d-flex justify-content-end mb-3">
    <a asp-action="AddSubject" class="btn btn-info">
        <i class="fas fa-plus"></i>&nbsp;Add Subject
    </a>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Class</th>
            <th>Language</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var subject in Model)
        {
            <tr>
                <td>@subject.Name</td>
                <td>@subject.StudentClass.Name</td>
                <td>@subject.Language.Name</td>
            </tr>
        }
    </tbody>

</table>
